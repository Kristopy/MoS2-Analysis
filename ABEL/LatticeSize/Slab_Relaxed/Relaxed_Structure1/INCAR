INCAR for ionic relaxation

! Electronic relaxation
ALGO   = Normal      ! Algorithm for electronic relaxation
NELM   = 200
NELMIN = 4         ! Minimum # of electronic steps
EDIFF  = 1E-6      ! Accuracy for electronic groundstate
ENCUT  = 450       ! Cut-off energy for plane wave expansion
PREC   = Accurate  ! Low/Normal/Accurate
LREAL  = .FALSE.   ! Projection in reciprocal space?
ISMEAR = 0         ! Smearing of partial occupancies.
SIGMA  = 0.2       ! Smearing width
ISPIN  = 1         ! Spin polarization?
IVDW   = 1         ! Van Der Waals

! Ionic relaxation
NSW    = 50        ! Final high-accuracy calculation without relaxation
EDIFFG = -0.01     ! Tolerance for ions
IBRION = 1         ! Algorithm for ions. 0: MD 1: QN/DIIS 2: CG
ISIF   = 3         ! Relaxation. 2: ions 3: ions+cell
MAXMIX = 80        ! Keep dielectric function between ionic movements
LVDWSCS = .TRUE.

! Output options
LWAVE  = .FALSE.   ! Write WAVECAR?

! Memory handling
NPAR    = 2
